<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".BattleActivity" >

    <ImageView
        android:id="@+id/enemyImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/enemy" />

    <ImageView
        android:id="@+id/enItemImageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/enemyImageView"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/enemyImageView"
        android:src="@drawable/enemyitem" />

    <TextView
        android:id="@+id/itemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enemyImageView"
        android:layout_below="@+id/enemyImageView"
        android:layout_marginTop="190dp"
        android:text="战斗信息"
        android:textColorLink="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enemyImageView"
        android:layout_below="@+id/enemyImageView"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="22dp"
        android:text="狗熊"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/enItemImageview"
        android:layout_marginRight="51dp"
        android:text="长剑"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/itemText"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:text="对方HP："
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/ophptextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="90dp"
        android:text="1000"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/itemText"
        android:layout_centerVertical="true"
        android:layout_marginLeft="190dp"
        android:text="我方HP："
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/mehptextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="250dp"
        android:text="1000"
        android:textColor="@color/white" />

</RelativeLayout>
